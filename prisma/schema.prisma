generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Admin {
  id       Int    @id
  username String @unique
  password String
}

model Pages {
  id      Int      @id @default(autoincrement())
  pageNum Int
  name    String
  content String   @db.LongText
  date    DateTime @default(now())
}
